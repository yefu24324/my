---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  songTitle?: string;
  artist?: string;
  albumCover?: string;
  duration?: string;
  currentTime?: string;
}

const {
  songTitle = "BATTLEPLAN EXTINGUISHER",
  artist = "重装部队·M59",
  albumCover = "/projects/project-01-expression-parser_01.png",
  duration = "03:56",
  currentTime = "00:44",
  class: className,
  ...rest
} = Astro.props;
---

<div class:list={["music-player bg-gray-900 text-white p-6 rounded-lg max-w-4xl mx-auto", className]} {...rest}>
  <!-- Main Content Area -->
  <div class="flex gap-8 mb-6">
    <!-- Album Artwork -->
    <div class="flex-shrink-0">
      <div class="w-64 h-64 bg-gradient-to-br from-red-900 to-purple-900 rounded-lg overflow-hidden relative">
        <img 
          src={albumCover} 
          alt={`${songTitle} album cover`}
          class="w-full h-full object-cover"
        />
        <!-- QR Code overlay (as shown in reference image) -->
        <div class="absolute bottom-4 right-4 w-12 h-12 bg-white rounded opacity-90">
          <div class="w-full h-full bg-black/10 rounded"></div>
        </div>
      </div>
    </div>

    <!-- Song Info and Lyrics -->
    <div class="flex-1 min-w-0">
      <div class="mb-6">
        <h1 class="text-3xl font-bold mb-2 text-white">{songTitle}</h1>
        <p class="text-gray-400 text-lg mb-4">{artist}</p>
        
        <!-- Progress Bar -->
        <div class="mb-4">
          <div class="flex items-center justify-between text-sm text-gray-400 mb-2">
            <span>{currentTime}</span>
            <span>{duration}</span>
          </div>
          <div class="w-full bg-gray-700 rounded-full h-1">
            <div class="bg-white rounded-full h-1" style="width: 18.5%"></div>
          </div>
        </div>
      </div>

      <!-- Lyrics Section -->
      <div class="text-gray-300 leading-relaxed space-y-2 text-sm max-h-40 overflow-y-auto">
        <p class="text-gray-500">Listen to the warning signs</p>
        <p class="text-gray-500">See the more crimson my heart</p>
        <p class="text-gray-500">Under ruins, the ashes start</p>
        <p class="text-gray-500">Thy fire, it will not die</p>
        <p class="text-gray-500">And now my call, my blood cry</p>
        <p class="text-gray-500">Glory consumes my old warrior</p>
        <p class="text-gray-500">And finally dreadful steel rings</p>
        <p class="text-white font-medium">Or a final helfire</p>
        <p class="text-gray-500">Bring the torn alive one from fear</p>
        <p class="text-gray-500">Through the fog, through the forest I will believe</p>
        <p class="text-gray-500">Our world lies in just silence</p>
        <p class="text-gray-500">They fell, they ruin me down</p>
        <p class="text-gray-500">As the dust falls, still I shins</p>
      </div>
    </div>
  </div>

  <!-- Control Bar -->
  <div class="flex items-center justify-between border-t border-gray-700 pt-4">
    <!-- Left side controls -->
    <div class="flex items-center space-x-4">
      <!-- Previous -->
      <button class="p-2 hover:bg-gray-800 rounded-full transition-colors" title="Previous">
        <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
          <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
        </svg>
      </button>

      <!-- Play/Pause -->
      <button class="p-3 hover:bg-gray-800 rounded-full transition-colors bg-gray-800" title="Play/Pause">
        <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24">
          <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
        </svg>
      </button>

      <!-- Next -->
      <button class="p-2 hover:bg-gray-800 rounded-full transition-colors" title="Next">
        <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
          <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"/>
        </svg>
      </button>

      <!-- Volume -->
      <button class="p-2 hover:bg-gray-800 rounded-full transition-colors" title="Volume">
        <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
          <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
        </svg>
      </button>
    </div>

    <!-- Right side controls -->
    <div class="flex items-center space-x-4">
      <!-- Playlist -->
      <button class="p-2 hover:bg-gray-800 rounded-full transition-colors" title="Playlist">
        <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
          <path d="M15 6H3v2h12V6zm0 4H3v2h12v-2zM3 16h8v-2H3v2zM17 6v8.18c-.31-.11-.65-.18-1-.18-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3V8h3V6h-5z"/>
        </svg>
      </button>

      <!-- Shuffle -->
      <button class="p-2 hover:bg-gray-800 rounded-full transition-colors opacity-60" title="Shuffle">
        <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
          <path d="M10.59 9.17L5.41 4 4 5.41l5.17 5.17 1.42-1.41zM14.5 4l2.04 2.04L4 18.59 5.41 20 17.96 7.46 20 9.5V4h-5.5zm.33 9.41l-1.41 1.41 3.13 3.13L14.5 20H20v-5.5l-2.04 2.04-3.13-3.13z"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .music-player {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }
  
  .music-player::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 50%, rgba(139, 69, 19, 0.1) 0%, transparent 50%);
    pointer-events: none;
    border-radius: inherit;
  }
</style>